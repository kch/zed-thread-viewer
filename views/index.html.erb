<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Zed Thread Viewer</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, sans-serif; height: 100vh; background: #1F2430; color: #CCCAC2; }
    .container { display: flex; flex-direction: row; height: 100vh; }
    .titles-section { width: 33vw; border-right: 2px solid #242936; background: #1F2430; }
    .content-section { width: 67vw; }
    .titles { height: calc(100vh - 36px); overflow-y: auto; border: 1px solid #242936; background: #1C212B; }
    .content { height: 100%; }
    .content iframe { width: 100%; height: 100%; border: none; }
    select { width: 100%; height: 100%; font-size: 10px; font-family: -apple-system, BlinkMacSystemFont, sans-serif; font-variant-numeric: tabular-nums; background: #1C212B; color: #CCCAC2; border: none; }
    option { padding: 1px; background: #242936; color: #CCCAC2; }
    h2 { padding: 6px; margin: 0; font-size: 12px; background: #242936; color: #CCCAC2; border-bottom: 1px solid #1A1F29; }
    input { width: 100%; font-size: 10px; padding: 4px; margin-bottom: 4px; border: 1px solid #242936; background: #1C212B; color: #CCCAC2; }
    input::placeholder { color: #707A8C; }
    input:focus { outline: none; border-color: #FFCC66; }
    .type-thread { background-color: rgba(115, 208, 255, 0.15); color: #73D0FF; }
    .type-conversation { background-color: rgba(213, 255, 128, 0.15); color: #D5FF80; }
  </style>
</head>
<body>
  <div class="container">
    <div class="titles-section">

      <input type="text" id="search" placeholder="Search..." oninput="searchTitles()">
      <select class="titles" id="titles" size="20" onchange="loadContent()">
        <!-- Options loaded via JavaScript -->
      </select>
    </div>
    <div class="content-section">
      <div class="content">
        <iframe id="content-frame" src="about:blank"></iframe>
      </div>
    </div>
  </div>

  <script>
    let allTitles = [];
    
    async function loadTitles() {
      const response = await fetch('/titles');
      allTitles = await response.json();
      displayTitles(allTitles);
      
      // Restore previous selection or auto-select first item
      const select = document.getElementById('titles');
      const savedSelection = localStorage.getItem('selectedEntryId');
      let selectionRestored = false;
      
      if (savedSelection && select.options.length > 0) {
        for (let i = 0; i < select.options.length; i++) {
          if (select.options[i].value === savedSelection) {
            select.selectedIndex = i;
            selectionRestored = true;
            break;
          }
        }
      }
      
      if (!selectionRestored && select.options.length > 0) {
        select.selectedIndex = 0;
      }
      
      if (select.options.length > 0) {
        loadContent();
      }
    }
    
    function displayTitles(titles) {
      const select = document.getElementById('titles');
      select.innerHTML = titles.map(item => 
        `<option value="${item.id}" class="type-${item.type}">${item.title}</option>`
      ).join('');
    }

    async function searchTitles() {
      const query = document.getElementById('search').value.trim();
      if (query.length === 0) {
        displayTitles(allTitles);
        return;
      }
      
      const response = await fetch(`/search?q=${encodeURIComponent(query)}`);
      const results = await response.json();
      displayTitles(results);
    }

    async function loadContent() {
      const select = document.getElementById('titles');
      const id = select.value;
      if (!id) return;
      
      // Save selection to localStorage
      localStorage.setItem('selectedEntryId', id);
      
      document.getElementById('content-frame').src = `/content/${id}`;
    }

    loadTitles();
  </script>
</body>
</html>